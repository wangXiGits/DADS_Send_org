package com.cmcc.gateway.SendThread;

import java.util.HashMap;
import java.util.Iterator;
import java.util.List;

import net.sf.json.JSONObject;

import org.apache.commons.httpclient.NameValuePair;

import com.cmcc.monitor.Util.C3P0Util;
import com.cmcc.monitor.Util.Constants;
import com.cmcc.monitor.Util.Log;
import com.cmcc.monitor.Util.PropertiesReader;

/**
 * 数据发送线程
 * sendFlag : 0->1
 */
public class DataSenderThread implements Runnable {
	private static String className = "DataSenderThread";
	private static String tableName = "";
	private static String send_path = PropertiesReader.getProp("EMR_URL_DATA");
	private static String querySql = "select * from ecgdata where sendFlag='0' limit 200";
	private String sql = null;
	private List<HashMap<String,String>> unSendList = null;
	private Iterator<HashMap<String,String>> iterator = null;
	private HashMap<String,String> map = null;
	private boolean runFlag = true;
	private JSONObject data = null;
	@Override
	public void run() {
		while(runFlag)
		{
			//查询未发送的数据
			unSendList = C3P0Util.getData(querySql);
			Log.info(className+" running... query not send data sql is "+querySql);
			iterator = unSendList.iterator();
			while(iterator.hasNext())
			{
				map = iterator.next();				
				if(Constants.DATATYPE_ECG.equals(map.get("dataType"))){
					tableName= "ecgdata";
				}else if(Constants.DATATYPE_BLOODPRESSURE.equals(map.get("dataType"))){
					tableName= "bloodpressure";			
				}else if(Constants.DATATYPE_BLOODGLUCOSE.equals(map.get("dataType"))){
					tableName= "bloodglucose";			
				}else if(Constants.DATATYPE_HEARTFUNCTION.equals(map.get("dataType"))){
					tableName= "heartfunction";			
				}else if(Constants.DATATYPE_SLEEP.equals(map.get("dataType"))){
					tableName= "sleep";			
				}else if(Constants.DATATYPE_WEIGHT.equals(map.get("dataType"))){
					tableName= "weight";			
				}else if(Constants.DATATYPE_SPO2.equals(map.get("dataType"))){
					tableName= "spo2";			
				}	
				
				if(Constants.DATATYPE_ECG.equals(map.get("dataType")))
				{
					data = new JSONObject();
					data.put("appType", map.get("appType"));
					data.put("dataType", map.get("dataType"));
					data.put("collectDate", map.get("realTime"));
					data.put("phone", map.get("phone"));
					data.put("dataValue", map.get("dataValue"));
					if(HttpClientUtil.sendHttpData(className,send_path,new NameValuePair[] {new NameValuePair("data", data.toString())}))
					{
					    sql = "update ecgdata set sendFlag='1',sendTime=NOW() where id="+map.get("id");
					    boolean rebool = C3P0Util.executeUpdate(sql);
					    if(rebool)
					    	Log.info(className+" send data successfully,and update ecgdata is success.the sql is \r\n"+sql);   
					    else
					    	Log.info(className+" send data successfully,and update ecgdata is fail.the sql is \r\n"+sql);   
					}else{
					    Log.info(className+" send data failure");
					}
				}
			}
			Log.info(className+" end...");
			try {
				Thread.sleep(30000);
			} catch (InterruptedException e) {
				Log.error("in method "+className+" interruption exception is \r\n"+e.getMessage());
				e.printStackTrace();
				Log.info(className+" is coming to the end");
				return;
			}
		}
	}
	
	
}
